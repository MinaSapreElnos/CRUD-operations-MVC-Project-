
@model Department 
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department </h1>

<form asp-action="Edit" >
    <div class="mb-3">
        <label class="form-label" asp-for="code"></label>
        <input type="text" class="form-control" asp-for="code">
        <span asp-validation-for="code" class="alert-danger mt-1"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input type="text" class="form-control" id="exampleInputPassword1" asp-for="Name">
        <span asp-validation-for="Name" class=" alert-danger mt-1"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="DateOfCreation"></label>
        <input type="datetime" class="form-control" asp-for="DateOfCreation">
        <span asp-validation-for="DateOfCreation" class="alert-danger mt-1"></span>
    </div>

   <button type="submit" class="btn btn-primary">Save</button> 

    <a asp-action="Index" asp-controller="Department" class="btn btn-light"> View All Department </a> 
</form>



@section ValidationSection{
    <partial name="_ValidationScriptsPartial" />
}

