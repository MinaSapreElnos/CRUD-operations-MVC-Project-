@model Department 
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Name Department</h1>  

<form asp-action="Delete" asp-route-id="@Model.Id">
<div class="mb-3">
    <label class="form-label" asp-for="code"></label>
    <input type="text" readonly class="form-control" asp-for="code">
    <span asp-validation-for="code" class="alert-danger mt-1"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="Name"></label>
    <input type="text" readonly class="form-control" id="exampleInputPassword1" asp-for="Name">
    <span asp-validation-for="Name" class=" alert-danger mt-1"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="DateOfCreation"></label>
    <input type="datetime" readonly class="form-control" asp-for="DateOfCreation">
    <span asp-validation-for="DateOfCreation" class="alert-danger mt-1"></span>
</div> 

<button type="submit" class="btn btn-danger">Delete</button>   

<button class=" btn btn-primary " asp-action="Index">Cancel</button>
</form>
