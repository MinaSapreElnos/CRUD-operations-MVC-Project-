@using Demo.PL.ViewModels;

@model EmployeeViewModel

@inject IDepartmentRepository DepartmentRepo 
@{
    var departments = new SelectList (await DepartmentRepo.GetAllAsync(), "Id", "Name");
}

<div>
    <img src="~/Files/Imege/@Model.ImageName" class="rounded" height="100" width="100" /> 
    <input asp-for="ImageName" hidden />
</div>

<div class="form-group">
    <label class="form-label "  asp-for="Name"></label>
    <input class="form-control" readonly asp-for="Name" />
</div>
<div class="form-group">
    <label class="form-label" asp-for="Age"></label>
    <input class="form-control" readonly asp-for="Age" />
</div>
<div class="form-group">
    <label class="form-label" asp-for="selary"></label>
    <input class="form-control" readonly asp-for="selary" />
</div>

<div class="form-group">
    <label class="form-label" asp-for="Department"></label>
    <select class="form-control" readonly asp-items="@departments" asp-for="DepartmentId">
        <option value="@null">------- Select Department ---------</option>

    </select>
</div>


<div class="form-group">
    <label class="form-label" asp-for="Address"></label>
    <input class="form-control" readonly asp-for="Address" />
</div>
<div class="form-group">
    <label class="form-label" asp-for="Email"></label>
    <input class="form-control" readonly asp-for="Email" />
</div>
<div class="form-group">
    <label class="form-label" asp-for="PhoneNumber"></label>
    <input class="form-control" readonly asp-for="PhoneNumber" />
</div>
<div class="form-group">
    <label class="form-label" asp-for="HireDate"></label>
    <input class="form-control" readonly asp-for="HireDate" />
</div>
<div class="form-group">
    <label class="form-label" asp-for="IsActive"></label>
    <input class="form-control" readonly  asp-for="IsActive" />
</div>
