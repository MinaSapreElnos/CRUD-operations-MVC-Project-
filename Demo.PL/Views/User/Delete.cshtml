@model UsersViewModel 
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.FName @Model.LName</h1>

<form asp-action="ComfirmDelete">

    <div class="mb-3">
        <label class="form-label" asp-for="Id"></label>
        <input type="text" readonly class="form-control" asp-for="Id">
        <span asp-validation-for="Id" class="alert-danger mt-1"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="FName"></label>
        <input type="text" readonly class="form-control" asp-for="FName">
        <span asp-validation-for="FName" class="alert-danger mt-1"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LName"></label>
        <input type="text" readonly class="form-control" id="exampleInputPassword1" asp-for="LName">
        <span asp-validation-for="LName" class=" alert-danger mt-1"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input type="datetime" readonly class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="alert-danger mt-1"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input type="datetime" readonly class="form-control" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="alert-danger mt-1"></span>
    </div>

    <input type="submit" value="Delete"class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-light">Back to Index</a>
</form>

